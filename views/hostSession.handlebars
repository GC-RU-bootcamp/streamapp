{{!-- Host Sessions 
   This section displays all the sessions and the attendees for that session when expanded.  IF the session occurs in the future, the button to start the Stream will be displayed. --}}
<h4 class="text-center my-3 text-primary ">Welcome {{#if isHost}}trainer, {{/if}}{{username}} </h4>


{{#if sessions}}
  <div class="body" id="accordion">
  
{{#each sessions}}
  <div class="card">
    <div class="card-header" id="hs-heading-{{@index}}">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-{{@index}}" data-sessionID={{this.conn_info}} aria-expanded="false" aria-controls="collapse-{{@index}}">
          {{this.name}} - {{this.dateFormated}} - Register Count: {{this.attendeeCnt}} 
         </button>
      </h5>
    </div>
    <div id="collapse-{{@index}}" class="collapse show" aria-labelledby="hs-heading-{{@index}}" data-parent="#accordion">
      <div class="card-body">
        <a href="/join-session/{{this.conn_info}}" class="btn btn-12 btn-md-12 btn-lg-12 btn-primary" name="startStream-{{this.conn_info}}">Start Session</a>   
           <h5>Registered</h5>
           {{#each this.people_sessions}} 
              <h6>{{this.Person.fst_nam}}  {{this.Person.lst_nam}} (id: {{this.Person.logon_id}} )</p> 
           {{/each}}
     </div>
    </div>
  </div> 
{{/each}}
{{else}}
  <h2 href="/create-session">You have no sessions; Create a Session</h2>
{{/if}}